<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Please pay attention! [alert]", sticky: false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: "Please pay attention! [error]", sticky: false) %>
<% else flash[:notice] %>
  <%= js add_gritter(flash[:notice], title: "Please pay attention! [notice]", sticky: false) %>
<% end %>